<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        android:paddingTop="20dp"
        tools:context=".activity.UpdateTaskActivity">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:text="@string/update_task_header"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextTitle_u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextDes_u"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="start|top"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editTextDate_u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:ems="10"
            android:inputType="time" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="datePickerAction"
                android:text="@string/task_create_datePicker" />

            <Button
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="timePickerAction"
                android:text="@string/task_create_timePicker" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:text="@string/task_create_rbtn_status"
                android:textSize="18sp" />


            <RadioGroup
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup_status">

                <RadioButton
                    android:id="@+id/radioButtonNotyet_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:checked="true"
                    android:text="@string/task_create_rbtn_not" />

                <RadioButton
                    android:id="@+id/radioButtonDoing_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:checked="false"
                    android:text="@string/task_create_rbtn_doing" />

                <RadioButton
                    android:id="@+id/radioButtonDone_u"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:checked="false"
                    android:text="@string/task_create_rbtn_done" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:text="@string/task_create_priority"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonUI1_u"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:checked="true"
                    android:text="RadioButton" />
                <RadioButton
                    android:id="@+id/radioButtonUI2_u"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:checked="false"
                    android:text="RadioButton" />
                <RadioButton
                    android:id="@+id/radioButtonUI3_u"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:checked="false"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/radioButtonUI4_u"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:checked="false"
                    android:text="RadioButton" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/task_create_image"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonCamera_u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="cameraBtnAction"
                    android:text="@string/task_create_camera" />

                <Button
                    android:id="@+id/buttonUpload_u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="uploadBtnAction"
                    android:text="@string/task_create_upload" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imageViewProfilePic_u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars[3]" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSave_u"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="saveBtnAction"
            android:text="@string/btn_save" />
    </LinearLayout>
</ScrollView>